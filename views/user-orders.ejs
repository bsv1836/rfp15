<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Orders</title>
  <link rel="stylesheet" href="/assets/styles.css">
  <style>
    .orders-container {
      max-width: 900px;
      margin: 20px auto;
      padding: 20px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .orders-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    .orders-table th, .orders-table td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    .orders-table th {
      background-color: #f4f4f4;
      color: #333;
    }
    .orders-table tr:hover {
      background-color: #f9f9f9;
    }
    .no-orders {
      text-align: center;
      color: #666;
      padding: 20px;
    }
  </style>
</head>
<body style="margin: 0; padding: 0; background-color: #f0f0f0; display: flex; flex-direction: column; align-items: center; min-height: 100vh;">
  <% if (locals.success_msg) { %>
    <div style="text-align: center; background-color: #d4edda; color: green; padding: 10px; margin: 20px 0; border-radius: 5px; max-width: 600px; width: 100%;">
      <%= locals.success_msg %>
    </div>
  <% } %>
  <% if (locals.error_msg) { %>
    <div style="text-align: center; background-color: #f8d7da; color: red; padding: 10px; margin: 20px 0; border-radius: 5px; max-width: 600px; width: 100%;">
      <%= locals.error_msg %>
    </div>
  <% } %>
  <div class="orders-container">
    <h2>My Orders</h2>
    <% if (orders.length > 0) { %>
      <table class="orders-table">
        <thead>
          <tr>
            <th>Fuel Type</th>
            <th>Quantity (L)</th>
            <th>Payment Method</th>
            <th>Total (â‚¹)</th>
            <th>Status</th>
            <th>Ordered On</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.fuelType %></td>
              <td><%= order.quantity %></td>
              <td><%= order.paymentMethod === 'Online Payment' ? 'ðŸ’³ Online' : 'ðŸ’µ Cash on Delivery' %></td>
              <td><%= order.totalAmount.toFixed(2) %></td>
              <td><%= order.status %></td>
              <td><%= new Date(order.createdAt).toLocaleDateString() %> at <%= new Date(order.createdAt).toLocaleTimeString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p class="no-orders">No orders found.</p>
    <% } %>
  </div>
</body>
</html>