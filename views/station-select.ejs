<!-- views/station-select.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Select Fuel Station</title>
  <link rel="stylesheet" href="/assets/styles.css" />
  <style>
    .station-list {
      padding: 30px;
      text-align: center;
    }
  
    .station-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }
  
    .station-card {
      flex: 0 1 300px;
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 15px;
      background: #f9f9f9;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      text-align: left;
    }
  
    .station-card h3 {
      margin: 0 0 10px;
    }
  
    .station-card .address {
      font-size: 0.9em;
      color: #555;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 100%;
    }
  
    .station-card .address:hover {
      white-space: normal;
      overflow: visible;
      background: #fffbe6;
      padding: 5px;
      border-radius: 4px;
    }
  
    .select-btn {
      margin-top: 15px;
      background-color: #28a745;
      color: white;
      border: none;
      padding: 8px 15px;
      border-radius: 5px;
      cursor: pointer;
      width: 100%;
    }
  
    .select-btn:hover {
      background-color: #218838;
    }
  </style>
</head>
<body>
  <div class="station-list">
    <h1>Select a Fuel Station</h1>
  
    <% if (stations.length === 0) { %>
      <p>No stations available right now.</p>
    <% } else { %>
      <div class="station-grid">
        <% stations.forEach(station => { %>
          <div class="station-card">
            <h3><%= station.fuelStation.name %></h3>
            <p class="address" title="<%= station.fuelStation.address %>"><%= station.fuelStation.address %></p>
            <form action="/user/select-station/<%= station._id %>" method="GET">
              <button class="select-btn">Select Station</button>
            </form>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
