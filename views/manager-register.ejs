<!-- views/manager-register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Manager Registration</title>
    <link rel="stylesheet" href="/assets/manager-styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', Arial, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e7eb 100%);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .container-manager {
            max-width: 500px;
            width: 100%;
            padding: 1rem;
            margin: 0.5rem;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        }
        .title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1a202c;
            text-align: center;
            margin-bottom: 1rem;
        }
        .section {
            margin-bottom: 1rem;
        }
        .section h3 {
            font-size: 1rem;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 0.75rem;
        }
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
        }
        .input-group {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }
        .input-group label {
            font-size: 0.75rem;
            font-weight: 500;
            color: #1a202c;
        }
        .input-group input[type="text"],
        .input-group input[type="tel"],
        .input-group input[type="email"],
        .input-group input[type="password"] {
            padding: 0.4rem;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 0.75rem;
            transition: border-color 0.3s ease;
        }
        .input-group input[type="text"]:focus,
        .input-group input[type="tel"]:focus,
        .input-group input[type="email"]:focus,
        .input-group input[type="password"]:focus {
            outline: none;
            border-color: #3182ce;
            box-shadow: 0 0 5px rgba(49, 130, 206, 0.2);
        }
        .fuel-options {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
        }
        .fuel-options label {
            font-size: 0.75rem;
            color: #4a5568;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }
        .submit-btn {
            padding: 0.5rem;
            background: #3182ce;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.2s ease;
        }
        .submit-btn:hover {
            background: #2b6cb0;
            transform: translateY(-2px);
        }
        .login-link {
            text-align: center;
            margin-top: 0.75rem;
            font-size: 0.75rem;
            color: #718096;
        }
        .login-link a {
            color: #3182ce;
            text-decoration: none;
            font-weight: 500;
        }
        .login-link a:hover {
            text-decoration: underline;
        }
        @media (max-width: 500px) {
            .container-manager {
                padding: 0.75rem;
                margin: 0.25rem;
            }
            .title {
                font-size: 1.25rem;
                margin-bottom: 0.75rem;
            }
            .section h3 {
                font-size: 0.875rem;
                margin-bottom: 0.5rem;
            }
            .form-row {
                grid-template-columns: 1fr;
                gap: 0.5rem;
                margin-bottom: 0.5rem;
            }
            .input-group label,
            .input-group input,
            .fuel-options label {
                font-size: 0.65rem;
            }
            .input-group input {
                padding: 0.3rem;
            }
            .fuel-options {
                gap: 0.5rem;
            }
            .submit-btn {
                padding: 0.4rem;
                font-size: 0.65rem;
            }
            .login-link {
                font-size: 0.65rem;
                margin-top: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container-manager">
        <h2 class="title">Manager Registration</h2>
        
        <form id="managerRegisterForm" method="POST" action="/manager/register" enctype="application/x-www-form-urlencoded">
            <!-- CSRF Token -->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

            <!-- Fuel Station Details -->
            <div class="section">
                <h3>Fuel Station Details</h3>
                <div class="form-row">
                    <div class="input-group">
                        <label>Fuel Station Name:</label>
                        <input type="text" name="fuelStationName" required>
                    </div>
                    <div class="input-group">
                        <label>Fuel Station Address:</label>
                        <input type="text" name="fuelStationAddress" required>
                    </div>
                </div>

                <!-- Fuel Types as Checkboxes -->
                <div class="input-group">
                    <label>Fuel Types Sold:</label>
                    <div class="fuel-options">
                        <label><input type="checkbox" name="fuelTypes" value="Petrol"> Petrol</label>
                        <label><input type="checkbox" name="fuelTypes" value="Diesel"> Diesel</label>
                        <label><input type="checkbox" name="fuelTypes" value="CNG"> CNG</label>
                        <label><input type="checkbox" name="fuelTypes" value="Power Petrol"> Power Petrol</label>
                    </div>
                </div>
            </div>

            <!-- Manager Personal Details -->
            <div class="section">
                <h3>Manager Personal Details</h3>
                <div class="form-row">
                    <div class="input-group">
                        <label>Manager Name:</label>
                        <input type="text" name="name" required>
                    </div>
                    <div class="input-group">
                        <label>Mobile Number:</label>
                        <input type="tel" name="mobile" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="input-group">
                        <label>Email ID:</label>
                        <input type="email" name="email" required>
                    </div>
                    <div class="input-group">
                        <label>Password:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                </div>
                <div class="input-group">
                    <label>Confirm Password:</label>
                    <input type="password" id="confirmPassword" name="confirm_password" required>
                </div>
            </div>

            <button type="submit" class="submit-btn">Register</button>
        </form>
        <p class="login-link">Already registered? <a href="/">Login here</a></p>
    </div>

    <script src="/assets/manager-register.js"></script>
</body>
</html>