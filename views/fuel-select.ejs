<!-- views/fuel-select.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Select Fuel</title>
  <link rel="stylesheet" href="/assets/styles.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', Arial, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e7eb 100%);
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .fuel-select-container {
      max-width: 400px;
      width: 100%;
      padding: 1.5rem;
      margin: 1rem;
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }
    .fuel-select-container h2 {
      font-size: 1.5rem;
      font-weight: 700;
      color: #1a202c;
      text-align: center;
      margin-bottom: 1.5rem;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    label {
      font-size: 0.875rem;
      font-weight: 500;
      color: #1a202c;
    }
    select,
    input[type="number"] {
      padding: 0.5rem;
      border: 1px solid #e2e8f0;
      border-radius: 6px;
      font-size: 0.875rem;
      color: #4a5568;
      background: #fff;
      transition: border-color 0.3s ease;
    }
    select:focus,
    input[type="number"]:focus {
      outline: none;
      border-color: #3182ce;
      box-shadow: 0 0 5px rgba(49, 130, 206, 0.2);
    }
    .total-price {
      font-size: 1rem;
      font-weight: 600;
      color: #1a202c;
      text-align: center;
      margin: 0.5rem 0;
    }
    button {
      padding: 0.6rem;
      background: #38a169;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
    }
    button:hover {
      background: #2f855a;
      transform: translateY(-2px);
    }
    @media (max-width: 500px) {
      .fuel-select-container {
        padding: 1rem;
        margin: 0.5rem;
      }
      .fuel-select-container h2 {
        font-size: 1.25rem;
        margin-bottom: 1rem;
      }
      label,
      select,
      input[type="number"],
      button {
        font-size: 0.75rem;
      }
      select,
      input[type="number"] {
        padding: 0.4rem;
      }
      .total-price {
        font-size: 0.875rem;
      }
      button {
        padding: 0.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="fuel-select-container">
    <h2>Select Fuel Type & Quantity</h2>
    <form action="/user/confirm-order/<%= stationId %>" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <label for="fuelType">Fuel Type:</label>
      <select name="fuelType" id="fuelType" required onchange="updatePrice()">
        <% inventory.forEach(item => { %>
          <option value="<%= item.fuelType %>" data-price="<%= prices[item.fuelType] %>">
            <%= item.fuelType %> - ₹<%= prices[item.fuelType] %>/L
          </option>
        <% }) %>
      </select>
      <label for="quantity">Quantity (Litres):</label>
      <input type="number" name="quantity" id="quantity" required min="1" onchange="updatePrice()" />
      <p class="total-price">Total Price: ₹<span id="totalPrice">0</span></p>
      <button type="submit">Continue to Payment</button>
    </form>
  </div>

  <script>
    function updatePrice() {
      const fuelSelect = document.getElementById("fuelType");
      const quantity = parseFloat(document.getElementById("quantity").value) || 0;
      const selectedOption = fuelSelect.options[fuelSelect.selectedIndex];
      const pricePerLitre = parseFloat(selectedOption.getAttribute("data-price"));
      const total = quantity * pricePerLitre;
      document.getElementById("totalPrice").innerText = total.toFixed(2);
    }
  </script>
</body>
</html>